<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="backgroundColor">@color/button_blue</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeScreen_Buttons" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/homeScreen_buttons</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">@drawable/ripple_homescreen_button</item>
        <item name="android:textAppearance">@style/HomeScreen_Button_Text</item>
    </style>

    <style name="HomeScreen_Button_Text">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/chat_text</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="Login_EditText_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1B1E1F</item>
        <item name="hintTextColor">#5F6063</item>
    </style>

    <style name="roundImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Blue_Button_Text">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
</resources>
